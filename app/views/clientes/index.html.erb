<h3>Controle de Clientes</h3>

<p id="notice"><%= notice %></p>

<table  border="2", bordercolor="blue", bgcolor=#F3F781>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id%></td>
        <td width = 250px ><%= cliente.nome %></td>
        <td width = 25px ><%= cliente.idade %></td>
        <!--td><%= link_to 'Show', cliente %></td-->
        <td><%= link_to 'Alterar', edit_cliente_path(cliente) %></td>
        <!--td><%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'Confirma?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>

