<h2> Controle de Restaurantes</h2>
<% if  @restaurante.errors.any? %>
	<ul>
		<% @restaurante.errors.full_messages.each do | msg| %>
		  <li> <%= msg %> <li/>
		<% end %>
	</ul>
<% end %>

<%= form_for @restaurante do |f| %>
  Nome: <%= f.text_field :nome %><br/>
  Ende: <%= f.text_field :endereco %><br/>
  Esp.: <%= f.text_field :especialidade %><br/>
<%= f.submit "Gravar", :dis_with => 'Gravaring...' %>
<% end %>	
<%= link_to 'Voltar', action: 'index' %>

